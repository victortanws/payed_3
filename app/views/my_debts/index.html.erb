<div class="page-header">
  <h1>
    My debts
    <a href="/my_debts/new" class="btn btn-lg btn-success">New My debt</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Initiator</th>
        <th>Other</th>
        <th>Actions</th>
      </tr>

      <% @my_debts.each do |my_debt| %>
      <tr>
        <td><%= my_debt.initiator.email %></td>
        <td><%= my_debt.other_id.email %></td>
        <td>
          <a href="/my_debts/<%= my_debt.id %>" class="btn btn-primary">Show</a>
          <a href="/my_debts/<%= my_debt.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_my_debt/<%= my_debt.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
